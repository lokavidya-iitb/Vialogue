<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context="com.comp.iitb.vialogue.dialogs.ForgotPasswordDialog">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Forgot Password ?"
        android:textColor="#037766"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tv_enter_email_phone_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_marginTop="30dp"
        android:text="Enter Email/Phone No. used for Login"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/et_enter_email_phone_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_enter_email_phone_no"
        android:layout_marginTop="5dp"
        android:backgroundTint="#037766"
        android:textCursorDrawable="@null" />

    <Button
        android:id="@+id/btn_generate_otp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_enter_email_phone_no"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="30dp"
        android:width="180dp"
        android:text="Generate Otp"
        android:textColor="@android:color/white" />

    <!-- temperory for testing purpose -->

    <EditText
        android:id="@+id/et_enter_otp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn_generate_otp"
        android:layout_marginTop="5dp"
        android:backgroundTint="#037766"
        android:textCursorDrawable="@null"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btn_verify_otp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_enter_otp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="30dp"
        android:width="180dp"
        android:text="Verify Otp"
        android:textColor="@android:color/white"
        android:visibility="gone"/>

    <!-- -->



</RelativeLayout>
